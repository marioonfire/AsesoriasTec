<div class="container p-4">
   <div class= "row">
       <div class ="col-md-4 mx-auto">
           <div class="card ">
             <div class="card-body">
               <form action="/links/asesorias" method="POST">
               	    <div class="form-group">

               		  

               		   <input type="text" class="form-control" autocomplete="off"name="Nombre Asesoria" placeholder="Nombre de asesoria" autofocus>
                	</div >
                	
					<div class="form-group">
						Tutor
					</div>
					<div class="form-group">
                     <select type="text" name="Asesor" class="form-control">
                    <option class="form-control" value="" disabled selected>Seleccione una asesor</option>
                                          {{#each asesor}}
                                                <option value="{{ id_Usuario}}" >{{NombredeUsuario}}</option>
                                                {{/each}}
                  </select>
          </div>
                
                	<div class="form-group">
               		   <select type="text" name="Secciones" class="form-control">
      							{{#each secciones}}

      							<option >Seleccione una Materia</option>

      							<option value="{{id_Seccion}}">{{Nombre}}</option>

      							{{/each}}
      						</select>
          </div>
                	<div class="form-group">
                		  Fecha Inicio
                	</div>
                	<div class="form-group">
                		 <input type="date" name="Fecha_Inicio" class="form-control" />
                	</div>
                	<div class="form-group">
                		  Fecha Fin
                	</div>
                	<div class="form-group">
                		 <input type="date" name="Fecha_Fin" class="form-control" />
                	</div>
                	<div class="form-group">
                		 Horario Incio
                	</div>
                	<div class="form-group">
                		<input type="time" name="Horario_Incio" class="form-control">
                	</div>
                	<div class="form-group">
                		 Horario Fin
                	</div>
                	<div class="form-group">
                		<input type="time" name="Horario_Fin" class="form-control">
                	</div>

                	<div class="form-group">
                		<textarea name="Descripcion" rows="2" class="form-control" placeholder="Descripcion"></textarea>
                	</div>

                		<button class="btn btn-success btn-block">
                			Guardar
                		</button>
                	</div>
               </form>
           </div>
       </div>
   </div>
</div>

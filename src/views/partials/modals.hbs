<!-- Modal Iniciar sesion -->
<div id="modalLogin" class="modal">
    <form action="/login" method="POST">
        <div class="modal-content">
            <h4 class="center black-text">Iniciar sesion</h4>
            <br>
            <div class="row">

            <div class="input-field col s12 m6 offset-m3">
               <input type="number" id="Matricula" name="Matricula" class="form-control" autofocus required>
               <label for="Matricula">Matricula:</label>
            </div>
            <div class="input-field col s12 m6 offset-m3">
                <input type="password" name="Contraseña" id="contraseña" class="form-control">
                <label for="contraseña">Contraseña:</label>
            </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="waves-effect waves-green btn-flat">Aceptar</button>
        </div>
    </form>
</div>

<!-- Modal Iniciar sesion -->
<div id="modalSignUp" class="modal modal-fixed-footer">
    <form action="/signup" method="POST">
        <div class="modal-content ">
            <h4 class="center black-text">Registrate</h4>
             <div class="row">
                  <div class="input-field col s12 m6 offset-m3">
                        <input type="number" name="Matricula" id="Matricula" autocomplete="off" autofocus="" required="">
                        <label for="Matricula">Matricula</label>
                  </div>
                  <div class="input-field col s12 m6 offset-m3">
                        <input type="text" name="NombredeUsuario" id="nombre" autocomplete="off" required="">
                        <label for="nombre">Nombre</label>
                  </div>
                  <div class="input-field col s12 m6 offset-m3">
                        <input type="password" name="Contraseña" autocomplete="off" id="passw" required="">
                        <label for="passw">Contraseña</label>
                  </div>
                  <div class="input-field col s12 m6 offset-m3">
                        <select name="Carreras">
                              <option value="" disabled selected>Seleccione una carrera</option>
                              {{#each carreras}}
                                    <option value="{{ id_Carrera}}">{{Nombre}}</option>
                              {{/each}}
                        </select>
                        <label>Carrera</label>
                  </div>

                  <div class="input-field col s12 m6 offset-m3">
                        <input type="email" name="Correo" id="correo" autocomplete="off" required="">
                        <label for="correo">Correo</label>
                  </div>
             </div>
        </div>
        <div class="modal-footer">
            <button class="waves-effect waves-green btn-flat">Aceptar</button>
        </div>
    </form>
</div>
